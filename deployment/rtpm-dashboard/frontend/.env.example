# RTPM Dashboard Environment Configuration

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_WS_URL=ws://localhost:8000/ws/metrics

# Application Configuration
VITE_APP_TITLE="RTPM Dashboard"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Real-time Performance Monitoring Dashboard"

# Authentication Configuration
VITE_AUTH_TOKEN_KEY=rtpm-auth
VITE_AUTH_SESSION_TIMEOUT=3600000
VITE_AUTH_REMEMBER_ME_DURATION=604800000

# Feature Flags
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_DEMO_MODE=true
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_NOTIFICATIONS=true

# Performance Configuration
VITE_METRICS_REFRESH_INTERVAL=30000
VITE_METRICS_MAX_DATA_POINTS=1000
VITE_CHART_ANIMATION_DURATION=750

# WebSocket Configuration
VITE_WS_RECONNECT_INTERVAL=3000
VITE_WS_MAX_RECONNECT_ATTEMPTS=10
VITE_WS_HEARTBEAT_INTERVAL=30000

# Error Tracking (Optional)
VITE_SENTRY_DSN=
VITE_ENABLE_ERROR_REPORTING=false

# Analytics (Optional)
VITE_GA_TRACKING_ID=
VITE_ENABLE_ANALYTICS=false

# Development Configuration
VITE_DEV_MOCK_API=false
VITE_DEV_API_DELAY=500
VITE_DEV_WEBSOCKET_MOCK=false

# Security Configuration
VITE_ENFORCE_HTTPS=true
VITE_CSP_NONCE=
VITE_ALLOWED_HOSTS=localhost,127.0.0.1

# UI Configuration
VITE_THEME_MODE=light
VITE_DEFAULT_LOCALE=en
VITE_ENABLE_DARK_MODE=true

# Monitoring Configuration
VITE_DEFAULT_TIME_RANGE=6h
VITE_ALERT_SOUND_ENABLED=true
VITE_NOTIFICATION_TIMEOUT=5000

# Infrastructure Monitoring
VITE_KUBERNETES_ENABLED=true
VITE_DNS_MONITORING_ENABLED=true
VITE_SSL_MONITORING_ENABLED=true

# Export Configuration
VITE_ENABLE_PDF_EXPORT=true
VITE_ENABLE_CSV_EXPORT=true
VITE_ENABLE_JSON_EXPORT=true
