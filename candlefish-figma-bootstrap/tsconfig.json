{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "types": ["@figma/plugin-typings"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "paths": {}
  },
  "include": [
    "plugin/src/**/*.ts",
    "scripts/**/*.ts"
  ]
}
