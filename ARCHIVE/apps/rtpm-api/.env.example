# Environment Configuration Example
# Copy this file to .env and update with your values

# Application
ENVIRONMENT=development
APP_VERSION=1.0.0
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
DATABASE_URL=postgresql+asyncpg://rtpm:rtpm_password@localhost:5432/rtpm_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# TimescaleDB
TIMESCALE_CHUNK_TIME_INTERVAL=1 day
TIMESCALE_RETENTION_POLICY=90 days

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=20
CACHE_TTL=300

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Authentication
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://rtpm.candlefish.ai

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090

# WebSocket
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_CONNECTIONS=1000

# Metrics
AGGREGATION_INTERVALS=1m,5m,1h,1d
MAX_QUERY_RANGE_DAYS=30

# Alerting
ALERT_CHECK_INTERVAL=60
MAX_ALERT_HISTORY=1000

# External APIs
NOTIFICATION_WEBHOOK_URL=

# Performance
QUERY_TIMEOUT=30
MAX_CONCURRENT_QUERIES=100
BATCH_INSERT_SIZE=1000
