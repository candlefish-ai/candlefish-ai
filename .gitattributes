# Git attributes for candlefish-ai
# Set default behavior to automatically normalize line endings
* text=auto eol=lf

# Explicitly declare text files
*.md text
*.txt text
*.yml text
*.yaml text
*.json text
*.js text
*.jsx text
*.ts text
*.tsx text
*.css text
*.scss text
*.html text
*.xml text
*.svg text
*.py text
*.sh text
*.bash text
*.zsh text
*.fish text
*.toml text
*.ini text
*.cfg text
*.conf text

# Declare files that will always have CRLF line endings on checkout
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Denote all files that are binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.tgz binary
*.bz2 binary
*.7z binary
*.rar binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.node binary
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
*.eot binary

# Git LFS tracking (already configured)
*.dll filter=lfs diff=lfs merge=lfs -text
*.node filter=lfs diff=lfs merge=lfs -text

# Diff behavior for common files
*.md diff=markdown
*.py diff=python
*.js diff=javascript
*.ts diff=javascript

# Export ignore (files to exclude from archives)
.github export-ignore
.gitattributes export-ignore
.gitignore export-ignore
.pre-commit-config.yaml export-ignore
tests/ export-ignore
docs/ export-ignore
*.test.* export-ignore
*.spec.* export-ignore
