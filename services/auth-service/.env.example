# Database Configuration
DATABASE_URL="postgresql://candlefish:secure_password@candlefish-postgres.internal:5432/candlefish_collaboration?schema=auth"

# Redis Configuration
REDIS_URL="redis://candlefish-redis.internal:6379"
REDIS_KEY_PREFIX="auth:"

# JWT Configuration
JWT_SECRET="use-aws-secrets-manager"
JWT_ACCESS_TOKEN_EXPIRY="15m"
JWT_REFRESH_TOKEN_EXPIRY="7d"
JWT_ISSUER="candlefish-auth"
JWT_AUDIENCE="candlefish-api"

# Server Configuration
NODE_ENV="production"
PORT="3000"
HOST="0.0.0.0"
API_VERSION="v1"

# Security Configuration
BCRYPT_ROUNDS="12"
MAX_LOGIN_ATTEMPTS="5"
ACCOUNT_LOCK_TIME="15m"
SESSION_SECRET="your-session-secret-key-here"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Email Configuration (for verification)
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_USER="apikey"
SMTP_PASS="your-sendgrid-api-key"
FROM_EMAIL="noreply@candlefish.ai"

# Monitoring & Logging
LOG_LEVEL="info"
ENABLE_REQUEST_LOGGING="true"

# Fly.io specific
FLY_APP_NAME="candlefish-auth"
FLY_REGION="sea"
