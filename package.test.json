{
  "name": "@candlefish-ai/collaboration-tests",
  "version": "1.0.0",
  "private": true,
  "description": "Comprehensive test suite for Candlefish AI collaboration system",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --selectProjects=\"Unit Tests\"",
    "test:integration": "jest --selectProjects=\"Integration Tests\"",
    "test:collaboration": "jest --selectProjects=\"Collaboration Unit Tests\" \"Collaboration Integration Tests\"",
    "test:e2e": "jest --selectProjects=\"Collaboration E2E Tests\"",
    "test:performance": "jest --selectProjects=\"Performance Tests\"",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:docker:up": "docker-compose -f docker-compose.test.yml up -d",
    "test:docker:down": "docker-compose -f docker-compose.test.yml down",
    "test:docker:clean": "docker-compose -f docker-compose.test.yml down --volumes --remove-orphans",
    "playwright:install": "npx playwright install",
    "playwright:test": "npx playwright test",
    "load-test": "artillery run __tests__/collaboration/performance/load-test.yml",
    "stress-test": "artillery run __tests__/collaboration/performance/stress-test.yml"
  },
  "devDependencies": {
    "@apollo/client": "^3.8.7",
    "@apollo/server-express": "^4.9.5",
    "@apollo/subgraph": "^2.5.6",
    "@faker-js/faker": "^8.3.1",
    "@golevelup/ts-jest": "^0.4.0",
    "@jest/environment": "^29.7.0",
    "@playwright/test": "^1.40.1",
    "@react-native-async-storage/async-storage": "^1.19.5",
    "@react-native-netinfo/netinfo": "^11.1.0",
    "@swc/core": "^1.3.99",
    "@swc/jest": "^0.2.29",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/react-native": "^12.4.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@types/ws": "^8.5.9",
    "apollo-server-express": "^3.12.1",
    "artillery": "^2.0.3",
    "docker-compose": "^0.24.6",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "identity-obj-proxy": "^3.0.0",
    "ioredis": "^5.3.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-native": "^0.73.0",
    "react-native-push-notification": "^8.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "ws": "^8.14.2"
  },
  "jest": {
    "preset": "react-native",
    "projects": [
      "<rootDir>/jest.config.js"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
