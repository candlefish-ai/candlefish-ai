# Candlefish AI Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control

# Environment
ENVIRONMENT=development
NODE_ENV=development

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=candlefish_dev
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=optional_redis_password

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_URL=http://localhost:8000

# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# Authentication
JWT_SECRET=generate_a_secure_random_string_here
JWT_EXPIRY=3600
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret

# AWS Configuration (for local development)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Third-party Services
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Monitoring
SENTRY_DSN=your_sentry_dsn
DATADOG_API_KEY=your_datadog_api_key
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Email Service
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@candlefish.ai

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_DEBUG_MODE=true
ENABLE_RATE_LIMITING=false

# Deployment Specific (CI/CD will override these)
NETLIFY_AUTH_TOKEN=your_netlify_token
FLY_API_TOKEN=your_fly_token
GITHUB_TOKEN=your_github_token

# NANDA Agent Configuration
NANDA_REGISTRY_URL=http://localhost:8080
NANDA_API_KEY=your_nanda_api_key
ENABLE_AGENT_MONITORING=true

# Development Defaults (safe for local use)
DEMO_EMAIL=demo@example.com
DEMO_PASSWORD=change_this_password
