# RTPM Environment Configuration Template
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=production
DEBUG=false

# Database Configuration
POSTGRES_DB=rtpm_db
POSTGRES_USER=rtpm_user
POSTGRES_PASSWORD=your-secure-database-password
POSTGRES_HOST=postgres-service
POSTGRES_PORT=5432
DATABASE_URL=postgresql://rtpm_user:your-secure-database-password@postgres-service:5432/rtpm_db

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://:your-secure-redis-password@redis-service:6379/0

# API Configuration
SECRET_KEY=your-super-secret-key-change-in-production
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
MAX_CONNECTIONS=100

# CORS Configuration
CORS_ORIGINS=https://rtmp.yourdomain.com,https://api.rtpm.yourdomain.com

# Frontend Configuration
API_URL=https://api.rtpm.yourdomain.com
WS_URL=wss://api.rtpm.yourdomain.com/ws

# Monitoring Configuration
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
LOG_LEVEL=INFO
ENABLE_METRICS=true

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password

# External Services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key

# AWS Configuration (if using AWS)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
EKS_CLUSTER_NAME=rtpm-cluster

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/rtpm.crt
SSL_KEY_PATH=/etc/ssl/certs/rtpm.key

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=rtpm-backups

# Feature Flags
ENABLE_DEBUG_TOOLBAR=false
ENABLE_API_DOCS=true
ENABLE_METRICS_ENDPOINT=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# Session Configuration
SESSION_TIMEOUT=3600
JWT_EXPIRATION=86400

# Email Configuration (for alerts)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=alerts@rtpm.yourdomain.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@rtpm.yourdomain.com

# Performance Configuration
WORKER_TIMEOUT=300
WORKER_KEEPALIVE=5
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# Security Configuration
ALLOWED_HOSTS=rtpm.yourdomain.com,api.rtmp.yourdomain.com
SECURE_SSL_REDIRECT=true
SECURE_HSTS_SECONDS=31536000
SECURE_CONTENT_TYPE_NOSNIFF=true
SECURE_BROWSER_XSS_FILTER=true
