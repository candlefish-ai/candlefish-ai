{
  "name": "@candlefish-ai/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Candlefish AI - Illuminating the path to AI transformation",
  "workspaces": [
    "apps/*",
    "packages/*",
    "projects/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel --filter ./apps/* run dev",
    "build": "pnpm -r --filter ./apps/* run build",
    "build:website": "pnpm --filter @candlefish-ai/website build",
    "build:dashboard": "pnpm --filter @candlefish-ai/dashboard build",
    "dev:website": "pnpm --filter @candlefish-ai/website dev",
    "dev:dashboard": "pnpm --filter @candlefish-ai/dashboard dev",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm -r run typecheck",
    "test": "pnpm -r run test",
    "deploy:website": "pnpm --filter @candlefish-ai/website deploy",
    "deploy:dashboard": "pnpm --filter @candlefish-ai/dashboard deploy"
  },
  "devDependencies": {
    "turbo": "^1.13.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.6"
}
