{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "build/**",
        ".next/**",
        "!.next/cache/**",
        "out/**"
      ],
      "cache": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "cache": true,
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.jsx",
        "src/**/*.js",
        "test/**/*.ts",
        "test/**/*.tsx",
        "**/__tests__/**"
      ]
    },
    "test:unit": {
      "dependsOn": [],
      "outputs": ["coverage/**"],
      "cache": true,
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.jsx",
        "src/**/*.js",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx"
      ]
    },
    "test:integration": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "cache": true,
      "inputs": [
        "tests/integration/**",
        "**/*.integration.test.ts"
      ]
    },
    "lint": {
      "outputs": [],
      "cache": true,
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "**/*.json",
        ".eslintrc.*",
        ".prettierrc.*"
      ]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true,
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "**/tsconfig.json"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "e2e": {
      "dependsOn": ["build"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "cache": false
    },
    "build:analyze": {
      "dependsOn": ["build"],
      "outputs": ["analyze/**"],
      "cache": true
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"],
      "cache": false
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "NETLIFY",
    "FLY",
    "AWS_REGION"
  ]
}
