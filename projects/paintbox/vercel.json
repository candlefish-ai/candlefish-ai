{
  "framework": "nextjs",
  "buildCommand": "npm run build:deploy",
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096",
      "NODE_ENV": "production",
      "NEXT_TELEMETRY_DISABLED": "1",
      "DISABLE_STATIC_OPTIMIZATION": "1",
      "DISABLE_REDIS": "true"
    }
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 60,
      "memory": 3008
    },
    "app/**/page.tsx": {
      "maxDuration": 30,
      "memory": 1769
    }
  },
  "outputDirectory": ".next",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        }
      ]
    }
  ],
  "version": 2,
  "regions": [
    "iad1"
  ]
}
