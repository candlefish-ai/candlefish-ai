{
  "name": "Paintbox - Professional Painting Estimator",
  "short_name": "Paintbox",
  "description": "Professional painting estimation app with offline capabilities, optimized for iPad field use - Made by Candlefish.ai",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#f8f9fa",
  "theme_color": "#dc2626",
  "orientation": "any",
  "categories": ["business", "productivity", "utilities"],
  "lang": "en",
  "dir": "ltr",
  "scope": "/",
  "prefer_related_applications": false,
  "icons": [
    {
      "src": "/favicon-16x16.png",
      "sizes": "16x16",
      "type": "image/png"
    },
    {
      "src": "/favicon-32x32.png",
      "sizes": "32x32",
      "type": "image/png"
    },
    {
      "src": "/apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png"
    },
    {
      "src": "/android-chrome-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/android-chrome-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    },
    {
      "src": "/logo-256.png",
      "sizes": "256x256",
      "type": "image/png"
    },
    {
      "src": "/logo-1024.png",
      "sizes": "1024x1024",
      "type": "image/png"
    }
  ],
  "shortcuts": [
    {
      "name": "New Estimate",
      "short_name": "New",
      "description": "Start a new painting estimate",
      "url": "/estimate/new",
      "icons": [{ "src": "/icons/shortcut-new.png", "sizes": "192x192" }]
    },
    {
      "name": "Recent Estimates",
      "short_name": "Recent",
      "description": "View recent estimates",
      "url": "/estimates",
      "icons": [{ "src": "/icons/shortcut-recent.png", "sizes": "192x192" }]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/tablet-wide.png",
      "sizes": "1024x768",
      "type": "image/png",
      "platform": "wide",
      "label": "Main estimate interface on iPad"
    },
    {
      "src": "/screenshots/tablet-narrow.png",
      "sizes": "768x1024",
      "type": "image/png",
      "platform": "narrow",
      "label": "Mobile estimate form"
    }
  ],
  "related_applications": [],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": ["standalone", "minimal-ui", "browser"],
  "file_handlers": [
    {
      "action": "/estimate/import",
      "accept": {
        "application/pdf": [".pdf"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ]
}
