{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./lib/*"],
      "@/lib/*": ["./lib/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/stores/*": ["./stores/*"],
      "@/components/*": ["./components/*"]
    }
  },
  "include": [
    "server/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "app",
    "components",
    "public",
    ".next"
  ]
}
